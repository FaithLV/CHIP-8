<Window x:Class="DOTNET_CHIP_8.DebuggerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Debugger" Height="460" Width="840" WindowStartupLocation="CenterScreen" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,0,10,0">
            <Button Content="Freeze" Style="{StaticResource MaterialDesignRaisedDarkButton}" Margin="0,0,15,0"/>
            <Button Content="Breakpoint" Style="{StaticResource MaterialDesignRaisedDarkButton}" Margin="0,0,15,0"/>
            <Button Content="Reference" Style="{StaticResource MaterialDesignRaisedDarkButton}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,0,10,0">
            <StackPanel Orientation="Vertical" x:Name="RegisterList">
                <TextBlock Text="Registers:" FontSize="22" HorizontalAlignment="Center"/>
                <Separator />
            </StackPanel>
        </StackPanel>
        

    </Grid>
</Window>
