<Window x:Class="DOTNET_CHIP_8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DOTNET_CHIP_8"
        mc:Ignorable="d"
        Title="CHIP-8 Emulator"
        Height="500" Width="720"
        AllowDrop="True"
        Drop="Window_Drop" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp">
    <Grid x:Name="EmuGrid">
        <Rectangle x:Name="CPU_Marker" Visibility="Hidden" Fill="Green" Width="25" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Rectangle x:Name="GPU_Marker" Visibility="Hidden" Fill="Red" Width="25" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,25"/>
        <Button Width="100" Height="25" Content="Dump GFX Buffer" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5,5" Click="DumpGFXBuffer_Button"/>
        <Button Width="120" Height="25" Content="Dump OpCode Log" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="125,5" Click="DumpOpCodes_Button"/>
        <TextBlock x:Name="FrameTimerDisplay" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
